<div class="container search-modal">
    <div class="row d-flex align-items-center">
        <div class="col-4">
            <h2 class="find-breed">Find<br>Your<br>Breed</h2>
        </div>
        <div class="col-8">
            <div>
                <form class="row justify-content-center align-items-center search-form p-4">
                    <div class="col-6">
                        {{!-- <label for="breed-selection">Breed</label> --}}
                        <select name="breed-selection" id="breed-selection" class="form-select form-select-lg ">
                            <option selected disabled>Breeds</option>
                            {{#each breeds}}
                            <option class="option text-dark" value="{{id}}">{{breed_name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-6 d-flex justify-content-center">
                        <button type="button" class="search-button">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>